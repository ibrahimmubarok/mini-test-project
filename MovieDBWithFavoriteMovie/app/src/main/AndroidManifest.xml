<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ibeybeh.moviedbwithfavoritemovie">

    <permission
        android:name="com.ibeybeh.moviedbwithfavoritemovie.WRITE_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.ibeybeh.moviedbwithfavoritemovie.READ_DATABASE"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.DetailMoviesActivity"
            android:parentActivityName=".activity.DetailMoviesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ibeybeh.moviedbwithfavoritemovie.activity.MainActivity" />
        </activity>
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".provider.FavoriteMoviesProvider"
            android:authorities="com.ibeybeh.moviedbwithfavoritemovie"
            android:exported="true"
            android:readPermission="com.ibeybeh.moviedbwithfavoritemovie.READ_DATABASE"
            android:writePermission="com.ibeybeh.moviedbwithfavoritemovie.WRITE_DATABASE" />
    </application>

</manifest>